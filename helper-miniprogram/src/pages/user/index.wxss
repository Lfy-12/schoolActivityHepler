.contianer {
  height: 100vh;
  background-color: #edece8;
}
.contianer .user_info_wrap {
  height: 45vh;
  overflow: hidden;
  background-color: var(--themeColor);
  position: relative;
}
.contianer .user_info_wrap .hide {
  display: none;
}
.contianer .user_info_wrap .user_img_wrap {
  position: relative;
}
.contianer .user_info_wrap .user_img_wrap .user_bg {
  height: 50vh;
  filter: blur(15rpx);
}
.contianer .user_info_wrap .user_img_wrap .user_info {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 20%;
  text-align: center;
}
.contianer .user_info_wrap .user_img_wrap .user_info .user_icon {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}
.contianer .user_info_wrap .user_img_wrap .user_info .user_name {
  color: #fff;
  margin-top: 40rpx;
}
.contianer .user_info_wrap .user_btn {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 40%;
  border: 1rpx solid greenyellow;
  color: greenyellow;
  font-size: 38rpx;
  padding: 30rpx;
  border-radius: 10rpx;
}
.contianer .user_content {
  position: relative;
}
.contianer .user_content .user_main {
  padding-bottom: 100rpx;
  color: #666;
  position: absolute;
  width: 90%;
  left: 50%;
  transform: translateX(-50%);
  top: -40rpx;
}
.contianer .user_content .user_main .address_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx ;
}
.contianer .user_content .user_main .history_wrap {
  background-color: #fff;
  display: flex;
  padding: 10rpx 0;
}
.contianer .user_content .user_main .history_wrap navigator {
  flex: 1;
  text-align: center;
  padding: 10rpx 0;
}
.contianer .user_content .user_main .history_wrap navigator .his_num {
  color: var(--themeColor);
}
.contianer .user_content .user_main .app_info_wrap {
  margin-top: 30rpx;
  background-color: #fff;
}
.contianer .user_content .user_main .app_info_wrap .app_info_item {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.contianer .user_content .user_main .app_info_wrap .app_info_contact {
  display: flex;
  justify-content: space-between;
}
.contianer .user_content .user_main .recommend_wrap {
  margin-top: 30rpx;
  background-color: #fff;
  padding: 20rpx ;
}
